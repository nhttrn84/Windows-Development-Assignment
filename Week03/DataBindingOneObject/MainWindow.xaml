<Window x:Class="DataBindingOneObject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingOneObject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Height="50" Width="200" Margin="10" Click="DatabindingBook_Button_Click">
            <TextBlock Text="Data binding for a book"></TextBlock>
        </Button>
        <Button Height="50" Width="200" Margin="10" Click="DatabindingPhone_Button_Click">
            <TextBlock Text="Data binding for a mobile phone"></TextBlock>
        </Button>
        <Button Height="50" Width="200" Margin="10" Click="DatabindingEmployee_Button_Click">
            <TextBlock Text="Data binding for an employee"></TextBlock>
        </Button>
    </StackPanel>
</Window>
